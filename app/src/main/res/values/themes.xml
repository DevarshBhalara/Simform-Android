<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DemoProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor"> @color/tealgreen</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorSecondary">@color/white</item>

    </style>

    <style name="ChipUncheckedText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="colour_picker"
        parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/color_picker</item>
    </style>

    <style name="detailsShoesText">
        <item name="android:textSize"> 20sp </item>
        <item name="android:textStyle"> bold </item>
        <item name="android:textColor"> @color/black </item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#B5B5B5</item>
        <item name="colorControlActivated"> #ffd040 </item>
    </style>
    <style name="Theme.App.Starting.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.App.Starting.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.App.Starting.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>