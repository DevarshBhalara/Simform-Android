<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedSquare">
        <item name="cornerSize">10%</item>
    </style>

    <style name="ktScreenText">
        <item name="android:textSize"> 16sp </item>
        <item name="android:textColor"> @color/textColorCard </item>
    </style>

    <style name="ktScreenSubText">
        <item name="android:textSize"> 12sp </item>
    </style>

    <style name="ktScreenCardImage">
        <item name="android:padding"> 4dp </item>
    </style>

    <style name="ktScreenCardImageSmall">
        <item name="android:padding"> 4dp </item>
        <item name="android:tint"> @color/purpleColor </item>
    </style>

    <style name="homeMartCardSubText">
        <item name="android:textColor"> @color/textGrey </item>
        <item name="android:textSize"> @dimen/sp_16 </item>
    </style>

    <style name="ktScreenCardImageDisabled">
        <item name="android:padding"> 4dp </item>
        <item name="android:tint"> @color/lightgray </item>
        <item name="android:layout_gravity"> center </item>
    </style>

    <style name="celuciusText">
        <item name="android:textColor"> @color/disebledTextColor </item>
        <item name="android:textSize"> 26sp </item>
    </style>

    <style name="MovieSeriesText">
        <item name="android:textSize"> 18sp </item>
        <item name="android:textColor"> @color/white </item>
    </style>

    <style name="MovieSeriesTextBg">
        <item name="android:textSize"> 18sp </item>
        <item name="android:textColor"> @color/black </item>
        <item name="android:padding"> 10dp </item>
    </style>

    <style name="chatImage">
        <item name="cornerFamily"> rounded </item>
        <item name="cornerSize"> 5% </item>
    </style>

    <style name="chatText">
        <item name="android:textSize"> 16sp </item>
        <item name="android:textColor"> @color/black </item>
        <item name="android:padding"> @dimen/dp_8 </item>
    </style>

    <style name="dateText">
        <item name="android:padding"> 5dp </item>
        <item name="android:textStyle"> bold </item>
        <item name="android:textColor"> @color/black </item>
    </style>

</resources>