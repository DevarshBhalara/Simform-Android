<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View" />

        <variable
            name="cardData"
            type="com.example.demoproject.ktscreen.model.LivingRoomCardModel" />
    </data>

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="@{cardData.progressBarVisible ? View.VISIBLE : View.GONE}">

        <LinearLayout
            android:id="@+id/actualProgress"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_55"
            android:background="@drawable/progress_bar_rounded"
            android:orientation="horizontal"
            app:layoutWeight="@{cardData.progressInPercent}"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="@{cardData.totalProgress+`%`}"
                android:textColor="@color/purpleColor" />

            <ImageView
                android:layout_width="@dimen/dp_2"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="end|center"
                android:layout_marginEnd="@dimen/dp_7"
                android:src="@drawable/temp_btn_rounded"
                android:tint="@color/purpleColor"
                tools:ignore="UseAppTint"
                android:contentDescription="@string/divider" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_55"
            android:background="@drawable/progress_bar_track_rounded"
            android:orientation="horizontal"
            app:layoutWeight="@{1F - cardData.progressInPercent}" />


    </LinearLayout>
</layout>
