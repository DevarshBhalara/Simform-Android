<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="series"
            type="com.example.demoproject.recyclerview.model.Series" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_margin="@dimen/dp_5"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/parentMovieName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Seriesname"
            android:textAlignment="center"
            android:padding="20dp"
            android:text="@{series.name}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/baseline_arrow_drop_up_24"
            style="@style/detailsShoesText"
            android:textColor="@color/white"/>

        <ImageButton
            android:id="@+id/btnExpand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/white"
            android:background="@android:color/transparent"
            tools:src="@drawable/baseline_arrow_drop_up_24"
            android:src="@{series.isExpanded ? @drawable/baseline_arrow_drop_up_24 :  @drawable/baseline_arrow_drop_down_24}"
            app:layout_constraintTop_toTopOf="@id/parentMovieName"
            app:layout_constraintBottom_toBottomOf="@id/parentMovieName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            tools:ignore="UseAppTint" />

        <include
            android:id="@+id/details"
            android:visibility="@{series.isExpanded ? View.VISIBLE : View.GONE}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/parentMovieName"
            layout="@layout/item_series_expandable"
            app:series="@{series}"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
