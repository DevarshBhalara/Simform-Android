<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="data"
            type="com.example.demoproject.recyclerview.model.Shoes" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_8"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/cardBackground"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10">

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:src="@drawable/shoes1"
                android:src="@{data.image}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/shoesName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:text="Converse"
                android:text="@{data.companyName}"
                android:textColor="@color/purpleColor"
                app:layout_constraintStart_toStartOf="@id/image"
                app:layout_constraintTop_toBottomOf="@id/image" />


            <TextView
                android:id="@+id/shoesStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Chuck Taylor"
                android:text="@{data.name}"
                android:textColor="#435367"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/image"
                app:layout_constraintTop_toBottomOf="@id/shoesName" />

            <TextView
                android:id="@+id/shoesDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Chuck Taylorsdfsfsdfsssfsssdfsfsdfsssf"
                android:text="@{data.description}"
                app:layout_constraintEnd_toEndOf="@id/image"
                app:layout_constraintStart_toStartOf="@id/image"
                android:layout_marginTop="@dimen/dp_8"
                app:layout_constraintTop_toBottomOf="@id/shoesStyle" />

            <TextView
                android:id="@+id/shoesPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="$285.99"
                android:text="@{`$`+data.price}"
                android:layout_marginTop="@dimen/dp_8"
                style="@style/detailsShoesText"
                app:layout_constraintTop_toBottomOf="@id/shoesDescription"
                app:layout_constraintStart_toStartOf="@id/image"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
