<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".binding.ViewBindingDemo">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextColor="@color/red"
        app:errorIconDrawable="@drawable/baseline_help_outline_24"
        app:errorContentDescription="This field is imporatant"
        app:boxStrokeColor="@color/red"
        android:id="@+id/tfUsernameLayout"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/user_name"
            android:id="@+id/tfUserName"
            android:maxLines="1"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_here"
        android:id="@+id/clickHere"
        app:layout_constraintStart_toStartOf="@id/tfUsernameLayout"
        app:layout_constraintEnd_toEndOf="@id/tfUsernameLayout"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tfUsernameLayout"
        />

</androidx.constraintlayout.widget.ConstraintLayout>