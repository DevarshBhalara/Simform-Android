<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="cardData"
            type="com.example.demoproject.ktscreen.model.LivingRoomCardModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardLamp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="@android:color/transparent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="@id/guideVerticalCenter"
        app:layout_constraintStart_toStartOf="@id/guideVerticalStart"
        app:layout_constraintTop_toBottomOf="@id/appBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/lampIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/rounded_button_icon_card"
                android:enabled="false"
                android:padding="@dimen/dp_4"
                android:src="@{cardData.image}"
                android:tint="@{cardData.isOn ? @color/purpleColor : @color/disebledTextColor }"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="UseAppTint" />

            <TextView
                android:id="@+id/tvLamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@{cardData.title}"
                android:textColor="@{cardData.isOn ? @color/textColorCard : @color/disebledTextColor }"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/lampIcon"
                app:layout_constraintTop_toBottomOf="@id/lampIcon" />


            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/rdOnOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dp_8"
                android:checked="@{cardData.isOn}"
                android:thumb="@drawable/thumb_selector"
                app:layout_constraintBottom_toBottomOf="@id/lampIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/lampIcon"
                app:track="@drawable/track_selector"
                tools:ignore="UseSwitchCompatOrMaterialXml" />


            <TextView
                android:id="@+id/status"
                style="@style/ktScreenSubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{cardData.isOn ? `On` : `Off` }"
                android:textAlignment="center"
                android:textColor="@{cardData.on ? @color/textColorCard : @color/disebledTextColor }"
                app:layout_constraintStart_toStartOf="@id/tvLamp"
                app:layout_constraintTop_toBottomOf="@id/tvLamp" />

            <TextView
                style="@style/ktScreenSubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{cardData.isOn ? cardData.watt : `---` }"
                android:textAlignment="center"
                android:textColor="@{cardData.on ? @color/textColorCard : @color/disebledTextColor }"
                app:layout_constraintBottom_toBottomOf="@id/status"
                app:layout_constraintEnd_toEndOf="@id/rdOnOff"
                app:layout_constraintStart_toStartOf="@id/rdOnOff"
                app:layout_constraintTop_toTopOf="@id/status" />


            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#cbcbcb"
                android:visibility="@{cardData.progressBarVisible || cardData.bottomTextVisible ? View.VISIBLE : View.GONE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/status" />


            <include
                layout="@layout/item_kt_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:visibility="@{cardData.progressBarVisible ? View.VISIBLE : View.GONE}"
                app:cardData="@{cardData}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider" />

            <include
                layout="@layout/item_living_card_bottomsheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:visibility="@{cardData.bottomTextVisible ? View.VISIBLE : View.GONE}"
                app:cardData="@{cardData}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</layout>


