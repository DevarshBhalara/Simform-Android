<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <import type="android.view.View"/>
        <variable
            name="song"
            type="com.example.demoproject.recyclerview.model.Song" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            tools:src="@drawable/dawnfm_icon"
            android:src="@{song.icon}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvSongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="@{song.songName}"
            app:layout_constraintBottom_toTopOf="@id/isExplicit"
            app:layout_constraintStart_toEndOf="@id/icon"
            app:layout_constraintTop_toTopOf="@id/icon"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="SongName" />

        <TextView
            android:id="@+id/isExplicit"
            android:background="@drawable/rounded_button_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/e"
            android:textColor="@color/white"
            android:visibility="@{song.isExplicit ? View.VISIBLE : View.GONE}"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="@id/icon"
            app:layout_constraintStart_toStartOf="@id/tvSongName"
            app:layout_constraintTop_toBottomOf="@id/tvSongName"
            tools:text="E" />

        <TextView
            app:layout_goneMarginTop="15dp"
            app:layout_goneMarginStart="0dp"
            android:id="@+id/length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{song.length}"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@id/isExplicit"
            app:layout_constraintStart_toEndOf="@id/isExplicit"
            app:layout_constraintTop_toTopOf="@id/isExplicit"
            tools:text="0:00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="AlbumName"
            app:layout_constraintTop_toBottomOf="@id/icon"
            app:layout_constraintStart_toStartOf="@id/icon"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="@{`Album Name : `+song.albumName}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Released"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon"
            android:layout_marginEnd="15dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="@{`Released Year : ` + song.releasedYear+``}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
