<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="shoesCartDetailsViewModel"
            type="com.example.demoproject.binding.ShoesCartViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.CartFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cardShoesDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:outlineSpotShadowColor="@android:color/transparent"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/cardBackground"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    >

                    <ImageView
                        android:id="@+id/shoesImage"
                        android:layout_width="344dp"
                        android:layout_height="224dp"
                        android:src="@drawable/card_shoes_image"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/shoesName"
                        style="@style/detailsShoesText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:text="Shoes Name"
                        android:text="@{shoesCartDetailsViewModel.shoesCartDetails.shoesName}"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/shoesImage"
                        app:layout_constraintStart_toStartOf="@id/shoesImage"
                        app:layout_constraintEnd_toStartOf="@id/btnMore"
                        />

                    <ImageButton
                        android:id="@+id/btnMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_more_horiz_24"
                        android:background="@android:color/transparent"
                        app:layout_constraintEnd_toEndOf="@id/shoesImage"
                        app:layout_constraintTop_toTopOf="@id/shoesName"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/shoesName"
                        app:layout_constraintStart_toStartOf="@id/shoesName"
                        android:layout_marginTop="5dp"
                        tools:text="4.9"
                        android:text="@{shoesCartDetailsViewModel.shoesCartDetails.shoesRating}"
                        android:textSize="18sp"
                        android:id="@+id/tvRating" />

                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="0dp"
                        android:theme="@style/RatingBar"
                        android:layout_height="40dp"
                        android:scaleX=".5"
                        android:scaleY=".5"
                        android:transformPivotX="0dp"
                        android:transformPivotY="0dp"
                        app:layout_constraintTop_toBottomOf="@id/shoesName"
                        app:layout_constraintStart_toEndOf="@id/tvRating"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        />

                    <LinearLayout
                        android:id="@+id/llSpecification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/ratingBar"
                        app:layout_constraintStart_toStartOf="@id/tvRating"
                        android:orientation="vertical"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/specification"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            />

                        <TextView
                            android:id="@+id/specificationTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="16sp"
                            android:textColor="#4e5a6b"
                            tools:text="Specification Title"
                            android:text="@{shoesCartDetailsViewModel.shoesCartDetails.shoesSpecificationTitle}"/>

                        <TextView
                            android:id="@+id/specificationDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="14sp"
                            android:textColor="#a0a8b4"
                            tools:text="Specification Details"
                            android:text="@{shoesCartDetailsViewModel.shoesCartDetails.shoesSpecificationDetail}"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/llSpecification"
                        app:layout_constraintStart_toStartOf="@id/llSpecification"
                        >

                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{`$`+shoesCartDetailsViewModel.shoesCartDetails.shoesPrice}"
                        tools:text="$200"
                        app:layout_constraintTop_toBottomOf="@id/llSpecification"
                        app:layout_constraintStart_toStartOf="@id/llSpecification"
                        android:layout_marginTop="15dp"
                        style="@style/detailsShoesText"
                        android:textColor="#6241db"
                        />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        app:layout_constraintEnd_toEndOf="@id/llSpecification"
                        app:layout_constraintTop_toBottomOf="@id/llSpecification"
                        app:layout_constraintTop_toTopOf="@id/tvPrice"
                        >


                        <ImageButton
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="50dp"
                            android:padding="5dp"
                            android:background="@drawable/corner_radius_image"
                            android:src="@drawable/baseline_delete_24"
                            android:backgroundTint="#f6e1e4"
                            android:paddingStart="50dp"
                            android:tint="#f1797a"
                            tools:ignore="RtlSymmetry,UseAppTint" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:backgroundTint="@color/white"
                            android:background="@drawable/corner_radius_image"
                            app:layout_constraintEnd_toEndOf="@id/llSpecification"
                            app:layout_constraintTop_toBottomOf="@id/llSpecification"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            >



                            <ImageButton
                                android:id="@+id/btnMinus"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/baseline_remove_24"
                                android:padding="0dp"
                                android:background="@color/white"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                />

                            <TextView
                                android:id="@+id/tvCount"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                tools:text="1"
                                android:text="@{shoesCartDetailsViewModel.shoesCart.shoesQtyCount}"
                                android:textAlignment="center"
                                android:padding="0dp"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                />

                            <ImageButton
                                android:id="@+id/btnPlus"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/baseline_add_24"
                                android:padding="0dp"
                                android:background="@color/white"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                />
                        </LinearLayout>

                    </FrameLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardTotalPrice"
                android:outlineSpotShadowColor="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@id/cardShoesDetails"
                app:layout_constraintStart_toStartOf="@id/cardShoesDetails"
                app:layout_constraintEnd_toEndOf="@id/cardShoesDetails"
                android:layout_margin="20dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/cardBackground"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/lblPrice"
                        android:text="@string/price_item"  />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/lblPrice"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="15dp"
                        android:id="@+id/tvCardPrice"
                        tools:text="$200"
                        android:text="@{`$`+shoesCartDetailsViewModel.shoesCart.shoesItemPrice}"  />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/lblPrice"
                        app:layout_constraintStart_toStartOf="@id/lblPrice"
                        android:layout_marginTop="10dp"
                        android:id="@+id/lblShipping"
                        android:text="@string/shipping"  />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/lblShipping"
                        app:layout_constraintEnd_toEndOf="@id/tvCardPrice"
                        android:id="@+id/tvCardShippingPrice"
                        tools:text="$10"
                        android:text="@{`$`+shoesCartDetailsViewModel.shoesCartDetails.shoesShippingPrice}"  />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/lblShipping"
                        app:layout_constraintStart_toStartOf="@id/lblShipping"
                        android:layout_marginTop="10dp"
                        android:id="@+id/lblTex"
                        android:text="@string/tax"  />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/lblTex"
                        app:layout_constraintEnd_toEndOf="@id/tvCardPrice"
                        android:id="@+id/tvCardTaxPrice"
                        tools:text="$10"
                        android:text="@{`$`+shoesCartDetailsViewModel.shoesCartDetails.shoesTaxPrice}"  />

                    <View
                        android:id="@+id/cardHorizontalLine"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="@drawable/horizontal_dotted_line"
                        app:layout_constraintTop_toBottomOf="@id/lblTex"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/cardHorizontalLine"
                        app:layout_constraintStart_toStartOf="@id/lblPrice"
                        android:id="@+id/lblSubtotal"
                        android:text="@string/subtotal"  />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/detailsShoesText"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="@id/lblSubtotal"
                        app:layout_constraintEnd_toEndOf="@id/tvCardPrice"
                        android:id="@+id/tvCardSubTotal"
                        tools:text="$220"
                        android:text="@{`$`+shoesCartDetailsViewModel.shoesCart.shoesSubTotal}"
                        />



                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/checkout_now"
                android:textColor="@color/white"
                android:backgroundTint="@color/purple_700"
                android:background="@drawable/rounded_button"
                app:layout_constraintTop_toBottomOf="@id/cardTotalPrice"
                app:layout_constraintStart_toStartOf="@id/cardShoesDetails"
                app:layout_constraintEnd_toEndOf="@id/cardShoesDetails"
                android:layout_marginTop="20dp"
                android:textSize="16sp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>
