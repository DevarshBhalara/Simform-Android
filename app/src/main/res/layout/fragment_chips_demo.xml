<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChipsDemo">

    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:checked="false"
            android:text="@string/watch"
            app:chipBackgroundColor="@color/chip_selected" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/laptop"
            app:checkedIcon="@null"
            app:chipBackgroundColor="@color/chip_selected"
            app:chipIcon="@drawable/baseline_laptop_24" />


    </com.google.android.material.chip.ChipGroup>


    <com.google.android.material.chip.ChipGroup
        android:id="@+id/cgStyles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:chipSpacingHorizontal="24dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Icon"
            app:chipIcon="@drawable/baseline_laptop_24" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAction"
            style="@style/Widget.MaterialComponents.Chip.Action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action"
            app:chipIcon="@drawable/baseline_add_24" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipChoice"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choice"
            app:closeIcon="@drawable/baseline_remove_24" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipEntry"
            style="@style/Widget.MaterialComponents.Chip.Entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entry" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipOutlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Outlined"
            app:chipBackgroundColor="@android:color/transparent"
            app:chipStrokeColor="?attr/colorPrimary"
            app:chipStrokeWidth="2dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipDisabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Disabled" />
    </com.google.android.material.chip.ChipGroup>


</LinearLayout>